<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title></title>
    <script type="text/javascript">
        function Check() {
            var sha1 = document.getElementsByName('sha1')[0].value;
            var OTA = document.getElementsByName('OTA')[0].value;
            var FilePath = document.getElementsByName('FilePath')[0].value;
            var VerNum = document.getElementsByName('VerNum')[0].value;
            var url = document.getElementsByName('url')[0].value;
            if (sha1 && OTA && FilePath && VerNum && url) {
                if (sha1.length != 40) {
                    alert('sha1長度有誤');
                    return false;
                } else if (OTA.length != 64) {
                    alert('OTA長度有誤');
                    return false;
                }
                return true;
            }
            alert('please input the info.');
            return false;
        }
    </script>
</head>

<body>
    <form name="addform" action="firmwareAdd" enctype="multipart/form-data" method="post" accept-charset="utf-8" onSubmit="return Check();">
        <h1>Firmware - 新增Firmware檔案</h1>
        <div class="row">
            <br />
            <label class="msgerr">
                <%=msg %>
            </label>
        </div>
        <div class="row">
            <label>版號：</label>
            <input type="number" name="VerNum" placeholder="VerNum" />
        </div>
        <div class="row">
            <label>下載路徑：</label>
            <input type="text" name="url" placeholder="url" />
        </div>
        <div class="row">
            <label>sha1：</label>
            <input type="text" name="sha1" placeholder="sha1" />
        </div>
        <div class="row">
            <label>OTA：</label>
            <input type="text" name="OTA" placeholder="OTA" />
        </div>
        <div class="row">
            <label>檔案路徑：</label>
            <input type="file" name="FilePath" accept=".bin" placeholder="FilePath" />
        </div>
        <input class="btn" type='submit' value='提交'>
        <input class="btn" type='reset' value='重置'>
        <input class="btn" type='button' value='上一頁' onclick="javascript: window.history.back();">
    </form>
</body>

</html>